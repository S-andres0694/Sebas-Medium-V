---
import HeaderLink from './HeaderLink.astro';
import {
	SITE_TITLE,
	SITE_LOGO_COLOR,
	SITE_LINKEDIN_URL,
	SITE_GITHUB_URL,
	DARK_MODE_ANCHOR_LINK_COLOR,
} from '../consts';
import BlogLogo from './BlogLogo.astro';
import GithubLogo from './GithubLogo.astro';
import LinkedinLogo from './LinkedinLogo.astro';
---

<header class="m-0 py-0 px-4 bg-white dark:bg-[#121212] shadow-md">
	<nav class="flex items-center justify-between">
		<h2 class="!m-0 text-base">
			<a
				href="/"
				class="!flex !items-center !gap-2 !py-4 !px-2 !text-black !border-b-4 !border-transparent !no-underline"
			>
				<BlogLogo
					className="border-2 border-blue-700 dark:!border-[#fb7ae3] rounded-full w-10 h-10 p-0.5"
					color="#001eff"
					darkColor="#fb7ae3"
				/>
				<span class="text-xl dark:text-[#FFFFFF] text-black">
					{SITE_TITLE}
				</span>
			</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/" class:list={'dark:!text-[#FFFFFF]'}>Home</HeaderLink>
			<HeaderLink href="/blog" class:list={'dark:!text-[#FFFFFF]'}
				>Blog</HeaderLink
			>
			<HeaderLink href="/about" class:list={'dark:!text-[#FFFFFF]'}
				>About</HeaderLink
			>
		</div>
		<div class="flex items-center gap-2">
			<a
				href={SITE_GITHUB_URL}
				target="_blank"
				class="!py-4 !px-2 !border-b-4 !border-transparent !no-underline"
			>
				<GithubLogo
					color={SITE_LOGO_COLOR}
					darkColor={DARK_MODE_ANCHOR_LINK_COLOR}
					className="w-10 h-10"
				/>
			</a>
			<a
				href={SITE_LINKEDIN_URL}
				target="_blank"
				class="!py-4 !px-2 !text-black !border-b-4 !border-transparent !no-underline"
			>
				<LinkedinLogo color={SITE_LOGO_COLOR} className="w-10 h-10" />
			</a>
		</div>
	</nav>
</header>
<style>
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}

	@media (prefers-color-scheme: dark) {
		nav[data-astro-cid-3ef6ksr2] a[data-astro-cid-3ef6ksr2].active {
			border-bottom-color: #fb7ae3 !important;
		}
	}
</style>
